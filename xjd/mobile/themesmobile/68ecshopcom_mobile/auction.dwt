    $(function(){
    	$('#checkLast8BidRecords').click(function(){
    		if($(".auctioninfo").is(':hidden'))
    		{
                $(".auctioninfo").show();    
    		}
    		else
    		{
                $(".auctioninfo").hide(); 
    		}
    	})

    })
</script>

